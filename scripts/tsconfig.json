{
  "compilerOptions": {
    // Target latest ECMAScript.
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",

    // Configuration required for Node.
    "moduleResolution": "node",
    "esModuleInterop": true,

    // Miscellaneous configuration.
    "strict": true, // Enable strict type checking.
    "noEmit": true, // Don't emit JS files - build step only for type checking.
    "resolveJsonModule": true, // Allow importing JSON files.

    // TODO: Replace with yarn workspaces.
    "rootDirs": [".", "../website/src"]
  },
  "include": ["."]
}
